@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1> Are You Sure To Delete This Department?</h1>
<br />
<br />
<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-form-label"></label>
        <input asp-for="@Model.Code" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label asp-for="@Model.DateOfCreation" class="col-form-label"></label>
        <input asp-for="@Model.DateOfCreation" class="form-control" readonly />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


